<img src="./assets/img/burger.png" class="mx-auto d-block burger-image">
    <h1 class="text-center red">Eat-Da-Burger!</h1>
    
    <div class="container">
        
        {{!-- Row to hold the undevoured burgers, devoured buttons, and burgers that have been devoured --}}
        <div class="row">
            <div class="col-md-2"></div>
            {{!-- Column to hold the undevoured burgers --}}
            <div class="col-md-3 text-center">
                {{#each burgers}}
                    {{#unless devoured}}
                        <div class="undevoured text-left" data-burgername="{{burger_name}}" name="burger" readonly>
                            <i class="fas fa-hamburger"></i> <span class="undevoured-name">{{id}}. {{burger_name}} </span>
                        </div>
                    {{/unless}}
                {{/each}}
            </div>
            {{!-- Column to hold the devour buttons --}}
            <div class="col-md-2 text-left">
                {{#each burgers}}
                    {{#unless devoured}}
                        <input type="button" value="Devour It!" data-id="{{id}}" data-devoured="{{devoured}}" name="devoured" class="btn devour">                        
                    {{/unless}}
                {{/each}}
            </div>
            {{!-- Column to hold the devoured burgers --}}
            <div class="col-md-3">
                <ul class="list-group todo-list">
                    {{#each burgers}}
                        {{#if devoured}}
                        <li class="list-group-item">{{id}}. {{burger_name}}</li>
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
            <div class="col-md-2"></div>
        </div>
        
        {{!-- Row to hold the add burger form --}}
        <div class="row justify-content-center">
            <div class="col-md-12 text-center">
                <h2>Add a Burger</h2>
                <form class="create-form">
                    <div class="form-group">
                        {{!-- Text input to input the new burger name --}}
                        <input type="text" id="burger" name="name">
                    </div>
                    <button type="submit" class="btn-primary">Add Burger</button>
                </form>
            </div>
        </div>
    </div>